@model List<Control_de_Parqueo.Models.RegistroParqueo>
@{
    ViewData["Title"] = "Vehículos Activos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0"><i class="bi bi-car-front"></i> Vehículos Actualmente en el Parqueo</h3>
                    <span class="badge bg-primary text-white">@Model.Count vehículo(s)</span>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error:</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No hay vehículos actualmente en el parqueo.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Placa</th>
                                        <th>Hora de Entrada</th>
                                        <th>Tiempo Transcurrido</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var registro in Model)
                                    {
                                        var tiempoTranscurrido = DateTime.UtcNow - registro.HoraEntrada;
                                        var horas = (int)tiempoTranscurrido.TotalHours;
                                        var minutos = tiempoTranscurrido.Minutes;
                                        
                                        <tr>
                                            <td><strong>@(registro.Vehiculo?.Placa ?? "N/A")</strong></td>
                                            <td>@registro.HoraEntrada.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                            <td>
                                                <span class="badge bg-warning text-dark">
                                                    @horas h @minutos m
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@registro.Estado</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

